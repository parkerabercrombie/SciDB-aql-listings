            cross_join, cumulate, deldim, dimensions, filter, gemm,
            gesvd, help, index_lookup, input, insert, join, list,
            load, load_module, load_library, lookup, merge, mpi_init,
            normalize, project, quantile, rank, redimension, regrid,
            remove, rename, repart, reshape, reverse, sample, save,
            scan, show, slice, sort, store, subarray, substitute,
            thin, transpose, uniq, unload_library, unpack,
            variable_window, versions, window, xgrid,
            % Data types
            bool, char, datetime, datetimetz, double, float, int8,
            int16, int32, int64, string, uint8, uint16, uint32, uint64},
  morecomment=[l]{--},
  morecomment=[s]{/*}{*/},
  morestring=[d]',
  morestring=[d]",
